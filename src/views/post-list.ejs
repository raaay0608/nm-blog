<!DOCTYPE html>
<html>
<head>
  <%- include('includes/head-tags') %>
  <%- include('includes/commons') %>
  <%- include('includes/custom-styles') %>
  <title>raaay's </title>
  <base href="/">
</head>
<body>

  <%- include('components/side-nav') %>

  <div class="container-fluid">

    <%#- include('components/top') %>
  
    <%# post feed list %>
    <div class="post-list">
      <% for (const post of posts) { %>
        <%- include('components/post-feed', { post }) %>
      <% } %>
    </div>

    <%# notice when there is no posts %>
    <% if (!posts || !posts.length) { %>
    <div class="card">
      <div class="card-header">
        Ooops...
      </div>
      <div class="card-body">
        <em>nothing here...</em>
      </div>
    </div>
    <% } %>

    <%# pagination %>
    <%- include('components/pagination', { page, total }) %>    

  </div>
  
</body>
</html>