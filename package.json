{
  "name": "raaay-blog",
  "version": "0.0.0",
  "description": "personal blog system",
  "main": "app.js",
  "scripts": {
    "_dev": "cross-env NODE_ENV=dev babel-node ./src/app.js --use_strict",
    "dev": "nodemon --exec cross-env NODE_ENV=dev babel-node ./src/app.js --use_strict",
    "build-server": "cross-env NODE_ENV=prod rimraf dist/ && babel ./ --out-dir dist/ --ignore ./admin,./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "build-admin": "cd admin && npm run build",
    "build": "npm run build-server && npm run build-admin",
    "start": "node dist/src/app.js",
    "a": "npm run build && npm start",
    "lint": "eslint src test",
    "test": "echo \"Error: no test specified\" && exit 1",
    "node": "node",
    "babel-node": "babel-node"
  },
  "author": "raaay0608",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "admin/*"
    ],
    "delay": "1000"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "bootstrap": "^4.0.0-beta.2",
    "busboy": "^0.2.14",
    "config": "^1.28.1",
    "debug": "^3.1.0",
    "ejs": "^2.5.7",
    "font-awesome": "^4.7.0",
    "github-markdown-css": "^2.9.0",
    "highlight.js": "^9.12.0",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-busboy": "^1.1.1",
    "koa-convert": "^1.2.0",
    "koa-error": "^3.1.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^3.3.0",
    "koa-logger": "^3.1.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.3",
    "markdown-it": "^8.4.0",
    "mongodb": "^3.0.0-rc0",
    "multy": "^0.1.5",
    "normalize.css": "^7.0.0",
    "popper.js": "^1.13.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.12.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.12.5"
  }
}
